{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@adoptdontshop/components": ["components/index.ts"],
      "@adoptdontshop/utils/*": ["utils/*"],
      "@adoptdontshop/hooks/*": ["hooks/*"],
      "@adoptdontshop/libs/*": ["libs/*"],
      "@adoptdontshop/pages/*": ["pages/*"],
      "@adoptdontshop/services/*": ["services/*"],
      "@adoptdontshop/store/*": ["store/*"],
      "@adoptdontshop/styles": ["styles"],
      "@adoptdontshop/permissions": ["contexts/permissions"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
