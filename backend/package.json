{
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "sync-db": "ts-node src/sync-db.ts",
    "start:dev": "NODE_ENV=development ts-node src/index.ts",
    "start:test": "NODE_ENV=test ts-node src/index.ts",
    "start:prod": "NODE_ENV=production ts-node src/index.ts",
    "migrate:dev": "npx sequelize-cli db:migrate --env development",
    "migrate:test": "npx sequelize-cli db:migrate --env test",
    "migrate:prod": "npx sequelize-cli db:migrate --env production",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "db:migrate": "ts-node node_modules/.bin/sequelize db:migrate",
    "db:seed": "ts-node node_modules/.bin/sequelize db:seed:all"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.4.0",
    "@types/pg": "^8.11.6",
    "@types/sequelize": "^4.28.20",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}

